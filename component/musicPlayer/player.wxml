<!--component/musicPlayer/player.wxml-->
<view class='player'>
  <image class="img" src='{{albumPic}}'></image>
  <ul class='info'>
      <li class='msg'>
        <text class='song-title'>{{musicTitle}}</text>
        <text>- {{musicAuthor}}</text>
      </li>

      <li class='progress'><view class="box1" style='width:{{progress}}px'></view><span class="span" style="left:{{progress}}px"></span></li>

      <li class='time'><text>{{begintime}}</text> / <text>{{endTime}}</text></li>
  </ul>

 <view class='btns'><image class="bg-img" bindtap='control' src='{{playButton}}'></image></view>
     
</view>
