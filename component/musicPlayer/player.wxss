/* component/musicPlayer/player.wxss */
.player{
  position: fixed;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  box-sizing: border-box;
  /* height: 80rpx; */
  padding:10rpx;
  background:url(data:image/jpeg;base64,);
  background-size: 100% 100%;
  /* border-radius: 10rpx; */
}
.player .img{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.player .info{
  flex: 1;
  width: 288rpx;
  padding-right: 20rpx;
}
.player .msg{
  display: block;
  padding-bottom: 10rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #fff;
  }
.player .song-title{
  /* max-width: 170rpx;
  overflow: hidden; 
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-right: 10rpx */
}
.player .time{
  display: block;
  padding-top: 10rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #fff;
}

.player .btns{
  width: 60rpx;
  height: 60rpx
}
.player .btns .bg-img{
  display: block;
  width: 100%;
  height: 100%;
}
.progress{
  display: block;
  position: relative;
  width: 100%;
  height: 6rpx;
  background: #7c898e;
}
.progress .box1{
  height: 100%;
  width: 0;
  background: #01e5ff;
}
.progress .span{
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKBAMAAAB/HNKOAAAAFVBMVEUAAAD///////////////////////9Iz20EAAAABnRSTlMA875NhE4qVjv+AAAALUlEQVQI12NgMBJUZmBgSUtLc2AwA5LJDGpAMolBDEgmQkiICEQWqpIhCKgLAKOBDjUn2cGFAAAAAElFTkSuQmCC) no-repeat 0 0;
  background-size: cover;
}